<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/436413/pexels-photo-436413.jpeg);">
  <h1> <%= @list.name %> </h1>
  <p><%= link_to "+ Add Movie", new_list_bookmark_path(@list), class: "btn btn-flat" %></p>

</div>

<div class="container cards">
  <% @list.movies.each do | movie | %>
    <div class="card">
      <%= image_tag movie.poster_url, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= movie.title %></h5>
        <p class="card-text"><%= movie.overview %></p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
  <% end %>
</div>
